---
// Welcome.astro
import Typewriter from "astro-typewriter";

export interface Props {
  messages?: string[];
  subtitle?: string;
  delay?: number;
  deleteSpeed?: number;
  pauseFor?: number;
  profileImage?: string;
  hoverImage?: string;
  githubUrl?: string;
  linkedinUrl?: string;
  email?: string;
}

const { 
  messages = ["Hi, I'm Hana :3", "Hi, I'm Hana :0", "Hi, I'm Hana :,D"],
  subtitle,
  delay = 100,
  deleteSpeed = 50,
  pauseFor = 2000,
  profileImage = "src/assets/photo1.jpg",
  hoverImage = "src/assets/photo4.jpg",
  githubUrl = "https://github.com/hhassan14",
  linkedinUrl = "https://www.linkedin.com/in/hana-hassan-7b454a296/",
  email = "hanahassan@willowmail.com"
} = Astro.props;
---

<style>
  .hero-typewriter {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 4rem 2rem;
    position: relative;
  }

  /* Social icons in top right */
  .social-icons {
    position: absolute;
    top: 2rem;
    right: 2rem;
    display: flex;
    gap: 1rem;
    z-index: 10;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    text-decoration: none;
    color: white;
  }

  .social-icon:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .social-icon svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  /* Kawaii decorations */
  .kawaii-decorations {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 3rem;
  }

  .kawaii-left, .kawaii-right {
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.7);
    animation: float 3s ease-in-out infinite;
    user-select: none;
  }

  .kawaii-left {
    margin-right: 2rem;
    animation-delay: 0.5s;
  }

  .kawaii-right {
    margin-left: 2rem;
    animation-delay: 1s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(-5deg); }
    50% { transform: translateY(-10px) rotate(5deg); }
  }

  /* Profile image container */
  .profile-container {
    width: 300px;
    height: 300px;
    position: relative;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 25px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    transition: all 0.4s ease;
  }

  .profile-container:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.4s ease;
    position: absolute;
    top: 0;
    left: 0;
  }

  .hover-image {
    opacity: 0;
  }

  .profile-container:hover .profile-image {
    opacity: 0;
  }

  .profile-container:hover .hover-image {
    opacity: 1;
  }

  .content-container {
    position: relative;
    z-index: 1;
    max-width: 800px;
    width: 100%;
  }

  .main-text {
    font-family:   'Patrick Hand', cursive;
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 600;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
    margin: 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .subtitle-text {
    font-family:  'Patrick Hand', cursive;
    color: rgba(255, 255, 255, 0.9);
    font-size: clamp(1rem, 2vw, 1.3rem);
    margin-top: 1.5rem;
    font-weight: 400;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
    letter-spacing: 0.02em;
  }

  .cursor {
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Info paragraph */
  .info-paragraph {
    font-family: 'Patrick Hand', cursive;
    color: rgba(255, 255, 255, 0.85);
    font-size: clamp(1.1rem, 2.2vw, 1.4rem);
    margin: 2rem auto;
    max-width: 600px;
    line-height: 1.6;
    text-align: center;
  }

  .info-paragraph a {
    color:rgb(179, 184, 255);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .info-paragraph a:hover {
    color:rgb(140, 196, 255);
    text-shadow: 0 0 10px rgba(255, 179, 217, 0.5);
  }

  /* Projects section */
  .projects-section {
    margin-top: 3rem;
    padding: 1rem 2rem 3rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .projects-title {
    font-family: 'Patrick Hand', cursive;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: white;
    text-align: center;
    margin-bottom: 1.2rem;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
    font-weight: 600;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 0;
  }

  .project-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    border-radius: 18px;
    padding: 0;
    border: 1px solid rgba(255, 255, 255, 0.25);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: left;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .project-card-content {
    padding: 2rem;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, rgb(179, 184, 255), rgb(255, 179, 217));
    transform: translateX(-100%);
    transition: transform 0.4s ease;
  }

  .project-card:hover::before {
    transform: translateX(0);
  }

  .project-card:hover {
    transform: translateY(-8px);
    background: rgba(255, 255, 255, 0.22);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.2rem;
    position: relative;
  }

  .project-title {
    font-family: 'Patrick Hand', cursive;
    font-size: 1.5rem;
    margin: 0;
    font-weight: 700;
    color: white;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);
    letter-spacing: 0.5px;
    position: relative;
    z-index: 1;
  }

  .project-title::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, rgb(179, 184, 255), rgb(255, 179, 217));
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .project-title::after {
    width: 100%;
  }

  .project-card:hover .project-title {
    color: rgb(179, 184, 255);
    text-shadow: 0 0 15px rgba(179, 184, 255, 0.5);
    transform: translateX(3px);
  }

  .external-link-icon {
    width: 20px;
    height: 20px;
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
    margin-left: 0.5rem;
    flex-shrink: 0;
  }

  .project-card:hover .external-link-icon {
    color: rgb(179, 184, 255);
    transform: translate(2px, -2px) scale(1.1);
  }

  .project-description {
    font-family: 'Patrick Hand', cursive;
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.1rem;
    line-height: 1.5;
    margin-bottom: 1.2rem;
    font-weight: 400;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 1.2rem;
  }

  .tech-badge {
    background: linear-gradient(135deg, rgba(179, 184, 255, 0.25), rgba(255, 179, 217, 0.25));
    color: rgba(255, 255, 255, 0.95);
    padding: 0.4rem 1rem;
    border-radius: 15px;
    font-size: 0.9rem;
    font-family: 'Patrick Hand', cursive;
    font-weight: 500;
    border: 1px solid rgba(179, 184, 255, 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .tech-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .project-card:hover .tech-badge::before {
    left: 100%;
  }

  .project-card:hover .tech-badge {
    background: linear-gradient(135deg, rgba(179, 184, 255, 0.4), rgba(255, 179, 217, 0.4));
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 15px rgba(179, 184, 255, 0.3);
    border-color: rgba(179, 184, 255, 0.6);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-typewriter {
      min-height: 50vh;
      padding: 2rem 1rem;
    }
    
    .social-icons {
      top: 1rem;
      right: 1rem;
      gap: 0.5rem;
    }
    
    .social-icon {
      width: 35px;
      height: 35px;
    }
    
    .social-icon svg {
      width: 18px;
      height: 18px;
    }

    .kawaii-left, .kawaii-right {
      font-size: 1.5rem;
      margin: 0 1rem;
    }
    
    .profile-container {
      width: 220px;
      height: 220px;
      border-radius: 20px;
    }

    .projects-section {
      margin-top: 2rem;
      padding: 1.5rem 1rem 2rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.2rem;
    }

    .project-card-content {
      padding: 1.5rem;
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.8rem;
    }

    .external-link-icon {
      align-self: flex-end;
      margin-left: 0;
      margin-top: -0.5rem;
    }

    .tech-stack {
      margin-top: 1rem;
    }
  }
</style>

<section class="hero-typewriter">
  <!-- Social Icons -->
  <div class="social-icons">
    <a href={githubUrl} class="social-icon" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
      <svg viewBox="0 0 24 24">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
